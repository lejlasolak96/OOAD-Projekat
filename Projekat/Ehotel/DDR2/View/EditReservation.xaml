        <TextBox x:Name="textBox_Copy7" IsReadOnly="True" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="845,203,0,0" Width="333" Height="40"/>
        <TextBox x:Name="textBox_Copy8" IsReadOnly="True" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="845,286,0,0" Width="333" Height="39"/>
        <TextBox x:Name="textBox_Copy9" IsReadOnly="True" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="845,366,0,0" Width="333" Height="40"/>
        <TextBox x:Name="textBox_Copy10" IsReadOnly="True" Text="€  " FontSize="50" HorizontalAlignment="Left" TextAlignment="Right" TextWrapping="Wrap" VerticalAlignment="Top" Margin="662,560,0,0" Width="480" Height="80"/>
