        <TextBlock x:Name="textBlock1_Copy" HorizontalAlignment="Left" Margin="51,117,0,0" TextWrapping="Wrap" Text="Room type:" VerticalAlignment="Top" Height="42" Width="181" FontSize="25" FontWeight="Medium"/>
