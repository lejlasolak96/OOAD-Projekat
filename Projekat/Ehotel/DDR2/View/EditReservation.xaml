        <TextBlock x:Name="textBlock1_Copy6" HorizontalAlignment="Left" Margin="51,284,0,0" TextWrapping="Wrap" Text="Parking:" VerticalAlignment="Top" Height="41" Width="181" FontSize="25" FontWeight="Medium"/>
