        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="232,118,0,0" VerticalAlignment="Top" Width="356" Height="40"/>
        <ComboBox x:Name="comboBox_Copy" HorizontalAlignment="Left" Margin="232,195,0,0" VerticalAlignment="Top" Width="356" Height="40"/>
        <DatePicker HorizontalAlignment="Left" Margin="255,439,0,0" VerticalAlignment="Top" Height="42" Width="333"/>
        <DatePicker HorizontalAlignment="Left" Margin="255,523,0,0" VerticalAlignment="Top" Height="42" Width="333"/>
        <ToggleSwitch x:Name="toggleSwitch" HorizontalAlignment="Left" Margin="232,271,0,0" VerticalAlignment="Top" Width="356"/>
        <ToggleSwitch x:Name="toggleSwitch_Copy" HorizontalAlignment="Left" Margin="232,346,0,0" VerticalAlignment="Top" Width="356"/>
    </Grid>
