        <TextBlock x:Name="textBlock1_Copy8" HorizontalAlignment="Left" Margin="51,439,0,0" TextWrapping="Wrap" Text="Check-in date:" VerticalAlignment="Top" Height="42" Width="199" FontSize="25" FontWeight="Medium"/>
