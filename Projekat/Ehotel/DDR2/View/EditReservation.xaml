        <TextBlock x:Name="textBlock1_Copy5" HorizontalAlignment="Left" Margin="637,371,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="45" Width="199" FontSize="25" FontWeight="Medium">
                <Run Text="No. of "/>
                <Run Text="children:"/>
