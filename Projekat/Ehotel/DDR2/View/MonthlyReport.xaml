<Page
    x:Class="DDR2.View.MonthlyReport"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DDR2.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="0,0,-1305,0">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10,10,0,0" Height="128" Width="633" FontSize="85" SelectionChanged="textBlock_SelectionChanged" RenderTransformOrigin="0.504,0.558">
            <Run Text="Monthly Report"/>
        </TextBlock>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="41,223,0,0" TextWrapping="Wrap" Text="Utility bills:" VerticalAlignment="Top" Height="60" Width="408" FontSize="40"/>
        <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="41,322,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="57" Width="438" FontSize="40">
            <Run Text="Phone bills:"/>
        </TextBlock>
        <TextBlock x:Name="textBlock3" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Profit:" VerticalAlignment="Top" Margin="41,429,0,0" Height="51" Width="408" FontSize="40"/>
    </Grid>
</Page>
